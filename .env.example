# Whisper API Configuration (Optional)
# Set these to enable audio/video file transcription during indexing
# Without these, audio/video files and YouTube shortcuts will be skipped

# Whisper transcription API endpoint
WHISPER_API_URL=https://mattes337--modal-whisper-transcribe-web-endpoint.modal.run

# Authentication token for Whisper API
WHISPER_AUTH_TOKEN=your_auth_token_here

# YouTube transcription API endpoint (optional - defaults to derived URL from WHISPER_API_URL)
# Used for transcribing YouTube URLs found in .url and .lnk shortcut files
WHISPER_YOUTUBE_API_URL=https://mattes337--modal-youtube-transcribe-web-endpoint.modal.run
