{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES6",
    "rootDir": "src",
    "incremental": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "exclude": ["tests", "**/*.test.ts", "vitest.config.ts", "node_modules"]
}
