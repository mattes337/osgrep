{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES6",
    "rootDir": "src",
    "incremental": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "tests",
    "**/*.test.ts",
    "vitest.config.ts",
    "node_modules",
    "benchmark",
    "scripts"
  ]
}
